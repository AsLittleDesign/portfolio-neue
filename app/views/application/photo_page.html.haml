
- content_for :scripts do
  = javascript_include_tag "pages/photo_page"

- content_for :page_style do "photo_page" end

.container.photo--top
  = link_to (eval "#{@type}_path".gsub("-", "_")), :class => "button m-black photo--back-navigation" do
    %span.icon--arrow--left
    = @type.titleize

.container.photo--container
  - image_class =
    - if @photo["transparent"] then "photo--image m-transparent" else "photo--image"

  = image_tag @photo["url"], :class => image_class, :"js-photo" => true

.container.photo--meta
  .photo--description
    %h2= @photo["title"]
    %p= @photo["description"]

  .social
    .social--option.m-black(js-pop--toggle="share")
      .icon--share.social--option-content.m-icon
      .social--option-content Share
